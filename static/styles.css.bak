/* Add this to your styles.css */
#file-list {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 12px;
    padding: 20px;
    margin-top: 30px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(0, 0, 0, 0.05);
    position: relative;
    overflow: hidden;
}

#file-list::before {
    content: '';
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    background: linear-gradient(90deg, #0056b3 0%, #28832b 100%);
    opacity: 0.25;
}

/* Add these changes to your existing styles */

/* Upload Section */
.upload-section {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 12px;
    padding: 25px;
    margin-bottom: 30px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(0, 0, 0, 0.05);
}

/* File List Section */
.files-section {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 12px;
    padding: 25px;
    margin-top: 30px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.files-section h2 {
    color: #2c3e50;
    font-size: 1.4rem;
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 2px solid #f0f0f0;
}

/* File Items */
.file-item {
    background: white;
    padding: 15px 20px;
    margin: 10px 0;
    border-radius: 8px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.2s ease;
    border: 1px solid #f0f0f0;
}

.file-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 3px 15px rgba(0, 0, 0, 0.05);
    border-color: #007bff;
}

/* File Actions */
.file-actions {
    display: flex;
    gap: 12px;
    align-items: center;
}

.preview-btn, .download-btn, .delete-btn {
    padding: 8px 15px;
    border-radius: 6px;
    font-size: 14px;
    transition: all 0.2s ease;
    text-decoration: none;
    cursor: pointer;
    border: none;
}

.preview-btn {
    background: #17a2b8;
    color: white;
}

.download-btn {
    background: #007bff;
    color: white;
}

.delete-btn {
    background: #dc3545;
    color: white;
}

/* Hover Effects */
.preview-btn:hover {
    background: #138496;
    transform: translateY(-1px);
}

.download-btn:hover {
    background: #0069d9;
    transform: translateY(-1px);
}

.delete-btn:hover {
    background: #c82333;
    transform: translateY(-1px);
}

/* Ensure buttons remain clickable */
.file-actions * {
    position: relative;
    z-index: 2;
}

.file-item::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 8px;
    z-index: 1;
}

/* Upload Buttons Container */
.upload-buttons {
    display: flex;
    gap: 15px;
    justify-content: center;
    margin-top: 20px;
}
/* Add a separator between sections */
.container::after {
    content: '';
    display: block;
    height: 1px;
    background: rgba(0, 0, 0, 0.08);
    margin: 35px 0;
    width: 100%;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .file-item {
        flex-direction: column;
        align-items: flex-start;
        padding: 15px;
    }
    
    .file-actions {
        width: 100%;
        justify-content: flex-end;
        margin-top: 10px;
    }
    
    .file-name {
        max-width: 100%;
    }
}

.file-actions {
    display: flex;
    gap: 12px;
    align-items: center;
}

.preview-btn, .download-btn {
    padding: 8px 15px;
    border-radius: 5px;
    text-decoration: none;
    color: white;
    font-size: 14px;
}

.modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
    background-color: white;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 500px;
    border-radius: 10px;
    text-align: center;
}

.close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

.close:hover,
.close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}

#bundle-name {
    width: 80%;
    padding: 10px;
    margin: 10px 0;
    border-radius: 5px;
    border: 1px solid #ccc;
}

#create-bundle, #upload-individual {
    padding: 10px 20px;
    margin: 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

#create-bundle {
    background: #007bff;
    color: white;
}

#upload-individual {
    background: #6c757d;
    color: white;
}

#create-bundle:hover {
    background: #0056b3;
}

#upload-individual:hover {
    background: #5a6268;
}
