body {
    font-family: Arial, sans-serif;
    background: #f4f4f4;
    margin: 0;
    padding: 20px;
}

.container {
    max-width: 600px;
    margin: 50px auto;
    background: white;
    padding: 30px;
    text-align: center;
    border-radius: 10px;
    box-shadow: 0 2px 15px rgba(0,0,0,0.1);
}

h1 {
    color: #333;
    text-align: center;
}

#drop-area {
    border: 2px dashed #007bff;
    padding: 20px;
    margin: 20px 0;
    border-radius: 8px;
    background: #e3f2fd;
}


#drop-area.highlight {
    background: #e2f0ff;
}

#file-label {
    display: block;
    color: #007bff;
    cursor: pointer;
    text-align: center;
    margin: 10px 0;
}

